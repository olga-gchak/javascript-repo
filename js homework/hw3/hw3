<!--TASK 1-->
let myArr = [2, 3, 4, 5];
let mult= 1;
for (let i = 0; i <myArr.length; i++) {
    mult *= myArr[i];
}
console.log(mult);


//floop while
let myArr = [2, 3, 4, 5];
let mult= 1;
let i = 0;
while (i<myArr.length) {
    mult *= myArr[i];
    i++;
}
console.log(mult);


