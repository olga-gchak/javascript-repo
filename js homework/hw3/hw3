<!--TASK 5-->
function findMin() {
    for(let i = 0; i < arguments.length; i++) {
        return Math.min.apply(Math, arguments);
    }
}
findMin(4, 2, 3);


<!--TASK 6-->
function findUnique(arr) {   
    let n = arr.length;
    for (let i = 0; i < n-1; i++) { 
        for (var j = i+1; j < n; j++) { 
            if (arr[i] === arr[j]) 
            return false; 
            }
     }
    return true;
}

findUnique([1, 2, 3, 5, 3]);
findUnique([1, 2, 3, 5, 11]);


<!--TASK 7-->
function lastElem (arr, num) {
    if (num === null) {
        return arr[arr.length - 1];
    }
     else {
        return arr.slice(Math.max(arr.length - num, 0));  
     }
  }

  console.log(lastElem([3, 4, 10, -5],2));   


<!--TASK 8-->
function toUpperLetter(str) {
    let words = str.split(" ");
    for (let i = 0; i < words.length; i++)
    {
        let j = words[i].charAt(0).toUpperCase();
        words[i] = j + words[i].substring(1);
    }
    return words.join(" ");
}

toUpperLetter("i love java script");
