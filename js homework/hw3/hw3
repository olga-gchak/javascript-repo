        console.log(i + " is odd");
    }
}


<!--TASK 3-->
function randArray(k) {
    let arr = [];
    for(let i = 0; i < k; i++) {
        arr[i] = Math.floor(Math.random() * 500) + 1; 
    }
    return arr;
}

randArray(6);


