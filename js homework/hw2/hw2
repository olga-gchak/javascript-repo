<!--TASK 5-->
let isAdult = prompt("How old are you?", 'Years');
let num = +isAdult;

if (Number.isInteger(num)) {
    if (num>=0 && num<=10) {
      alert("Your are too young");
}
    else if (num>10 && num<18) {
      alert("You can login with your parents' permissinon");
}
    else {
      alert("WELCOME!");
}
  }
else {
    alert("error");
  }


  <!--TASK 6-->
  let a = prompt("Please, enter the length of the side a", 'a');
  if (a<=0) {
    alert("Incorrect data");
  }

  
  let b = prompt("Please, enter the length of the side b", 'b');
  if (b<=0) {
  alert("Incorrect data");
}
  
  let c = prompt("Please, enter the length of the side c", 'c');
  if (c<=0) {
  alert("Incorrect data");
}

  let p = (+a + +b + +c)/2;
  let result = (p*(p-a)*(p-b)*(p-c))**(1/2);
  alert(result.toFixed(3));

  if ((a**2 + b**2 === c**2) || (a**2 + c**2 === b**2) || (c**2 + b**2 === a**2)) {
    alert("You have a right triangle");
  } else {
      alert("You don't have a right triangle");
  }

  
